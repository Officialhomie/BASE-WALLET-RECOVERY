# Application
NEXT_PUBLIC_APP_NAME="Smart Wallet Manager"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/smart_wallet_db?schema=public"

# Redis (Upstash or local)
UPSTASH_REDIS_REST_URL="https://your-redis-url.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-redis-token"

# Blockchain RPCs
NEXT_PUBLIC_ALCHEMY_API_KEY="your-alchemy-api-key"
NEXT_PUBLIC_BASE_RPC_URL="https://base-mainnet.g.alchemy.com/v2/YOUR_KEY"
NEXT_PUBLIC_ETHEREUM_RPC_URL="https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY"
NEXT_PUBLIC_OPTIMISM_RPC_URL="https://opt-mainnet.g.alchemy.com/v2/YOUR_KEY"
NEXT_PUBLIC_ARBITRUM_RPC_URL="https://arb-mainnet.g.alchemy.com/v2/YOUR_KEY"

# Coinbase Paymaster & Bundler (legacy)
NEXT_PUBLIC_COINBASE_PAYMASTER_URL="https://api.developer.coinbase.com/rpc/v1/base/paymaster"
NEXT_PUBLIC_COINBASE_BUNDLER_URL="https://api.developer.coinbase.com/rpc/v1/base/bundler"
CDP_API_KEY="your-coinbase-developer-platform-api-key"

# Pimlico Paymaster & Bundler
NEXT_PUBLIC_PIMLICO_API_KEY="pim_xxxxx"
NEXT_PUBLIC_PIMLICO_BUNDLER_URL="https://api.pimlico.io/v2/8453/rpc"
NEXT_PUBLIC_PIMLICO_SPONSORSHIP_POLICY_ID="sp_rich_purifiers"
# Provider selection: pimlico | coinbase
NEXT_PUBLIC_PAYMASTER_PROVIDER="pimlico"

# WalletConnect
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID="your-walletconnect-project-id"

# Tenderly (for simulation)
TENDERLY_API_KEY="your-tenderly-api-key"
TENDERLY_ACCOUNT_SLUG="your-tenderly-account"
TENDERLY_PROJECT_SLUG="your-tenderly-project"

# Pusher (for WebSocket real-time updates)
NEXT_PUBLIC_PUSHER_APP_KEY="your-pusher-app-key"
NEXT_PUBLIC_PUSHER_CLUSTER="your-pusher-cluster"
PUSHER_APP_ID="your-pusher-app-id"
PUSHER_SECRET="your-pusher-secret"

# Analytics & Monitoring
NEXT_PUBLIC_POSTHOG_KEY="your-posthog-key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"
SENTRY_DSN="your-sentry-dsn"
AXIOM_TOKEN="your-axiom-token"
AXIOM_DATASET="smart-wallet-logs"

# Chain IDs
NEXT_PUBLIC_CHAIN_ID_BASE=8453
NEXT_PUBLIC_CHAIN_ID_BASE_SEPOLIA=84532
NEXT_PUBLIC_CHAIN_ID_ETHEREUM=1
NEXT_PUBLIC_CHAIN_ID_SEPOLIA=11155111

# Smart Wallet Addresses
NEXT_PUBLIC_SMART_WALLET_IMPLEMENTATION="0x..." # If needed
NEXT_PUBLIC_ENTRY_POINT_ADDRESS="0x5FF137D4b0FDCD49DcA30c7CF57E578a026d2789" # ERC-4337 v0.6

# Feature Flags
NEXT_PUBLIC_ENABLE_DEBUG_PANEL=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PAYMASTER=true
NEXT_PUBLIC_ENABLE_SIMULATION=true

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Session (if using NextAuth)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-generate-with-openssl-rand-base64-32"
